<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".Sign_up">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:src="@drawable/ic_arrow_back1"
        android:contentDescription="white" />
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Socially"
        android:textSize="50sp"
        android:textStyle="italic"
        android:textColor="@android:color/white" />
    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="Create An Account and Sign Up"
        android:textSize="14sp"
        android:textColor="@android:color/white" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/subTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:contentDescription="Profile Image"
        android:src="@drawable/camera_pic_for_sign_up"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/white" />

    <EditText
        android:layout_centerInParent="true"
        android:id="@+id/username"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImage"
        android:layout_marginTop="40dp"
        android:hint="Username"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:inputType="text" />

    <EditText
        android:layout_centerInParent="true"
        android:id="@+id/firstName"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginTop="16dp"
        android:hint="Your Name"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:inputType="textPersonName" />

    <EditText
        android:layout_centerInParent="true"
        android:id="@+id/lastName"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstName"
        android:layout_marginTop="16dp"
        android:hint="Your Last name"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:inputType="textPersonName" />

    <EditText
        android:layout_centerInParent="true"
        android:id="@+id/dateOfBirth"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lastName"
        android:layout_marginTop="16dp"
        android:hint="Date of Birth"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:inputType="date" />

    <EditText
        android:layout_centerInParent="true"
        android:id="@+id/email"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateOfBirth"
        android:layout_marginTop="16dp"
        android:hint="E-mail"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:inputType="textEmailAddress" />

    <EditText
        android:layout_centerInParent="true"
        android:id="@+id/password"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="16dp"
        android:hint="Password"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/createAccountBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginTop="50dp"
        android:text="Create an Account"
        android:enabled="true"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:background="@drawable/button_disabled" />

</RelativeLayout>