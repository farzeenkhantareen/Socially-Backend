            android:id="@+id/tab_indicators_container"
            android:layout_width="match_parent"
            android:layout_height="3dp">

            <View
                android:id="@+id/tab_background_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

        </RelativeLayout>

